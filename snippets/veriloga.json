{
    "nature": {
        "prefix":"nature",
        "body": [
            "nature ${1:name}",
            "\t$0",
            "endnature"
        ],
        "description": "Snippet for a nature definition",
        "scope": "veriloga"
    },
    "discipline": {
        "prefix":"discipline",
        "body": [
            "discipline ${1:name}",
            "\t$0",
            "enddiscipline"
        ],
        "description": "Snippet for a discipline definition",
        "scope":"veriloga"
    },
    "module": {
        "prefix":"module",
        "body": [
            "module ${1:name}(${2:port_list});",
            "\t$0",
            "endmodule"
        ],
        "description": "Snippet for a module definition",
        "scope":"veriloga"
    },
    "if": {
        "prefix": "if",
        "body": [
            "if (${1:condition}) begin",
            "\t${2:pass}",
            "end"
        ],
        "description": "Snippet for an if statement"
    },
    "if/else": {
        "prefix": "if/else",
        "body": [
            "if (${1:condition}) begin",
            "\t${2:pass}",
            "end else begin",
            "\t${3:pass}",
            "end"
        ],
        "description": "Snippet for an if statement with else"
    },
    "elseif": {
        "prefix": "else if",
        "body": [
            "else if (${1:condition}) begin",
            "\t$0",
            "end"
        ],
        "description": "Snippet for an else if"
    },
    "else": {
        "prefix": "else",
        "body": [
            "else begin",
            "\t$0",
            "end"
        ],
        "description": "Snippet for an else"
    },
    "while": {
        "prefix": "while",
        "body": [
            "while (${1:expression}) begin",
            "\t$0",
            "end"
        ],
        "description": "Snippet for a while loop"
    },
    "for": {
        "prefix": "for",
        "body": [
            "for (int ${1:i}=0; ${1:i}<${2:MAX}; ++${1:i}) begin",
            "\t$0",
            "end"
        ],
        "description": "Snippet for a for loop"
    },
    "heading": {
        "prefix": "heading",
        "body": [
            "// -------------------------------------------------------",
            "// -- ${1:heading}",
            "// -------------------------------------------------------\n$0"
        ],
        "description": "Snippet for a heading"
    },
    "heading+description": {
        "prefix": "heading+description",
        "body": [
            "// -------------------------------------------------------",
            "// -- ${1:heading}",
            "// -------------------------------------------------------",
            "// ${2:description}",
            "// -------------------------------------------------------\n$0"
        ],
        "description": "Snippet for a heading with a block for description"
    }
}